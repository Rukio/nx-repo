{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": [
    "../**/*.spec.js",
    "../**/*.test.js",
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.tsx",
    "../**/*.test.tsx",
    "../**/*.spec.jsx",
    "../**/*.test.jsx"
  ],
  "include": ["../**/*", "*.ts", "*.js", "*.tsx", "*.jsx"]
}
