{
  "name": "design-system",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "ts/libs/shared/ui/design-system/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/ts/libs/shared/ui/design-system",
        "tsConfig": "ts/libs/shared/ui/design-system/tsconfig.lib.json",
        "project": "ts/libs/shared/ui/design-system/package.json",
        "entryFile": "ts/libs/shared/ui/design-system/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "format": ["esm", "cjs"],
        "skipTypeField": true,
        "assets": [
          {
            "glob": "ts/libs/shared/ui/design-system/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "ts/libs/shared/ui/design-system/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "ts/libs/shared/ui/design-system/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "ts/libs/shared/ui/design-system/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "ts/libs/shared/ui/design-system/.storybook",
        "outputDir": "dist/storybook/design-system"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "target": "build"
        }
      ],
      "options": {
        "cwd": "dist/ts/libs/shared/ui/design-system",
        "command": "npm publish"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          {
            "command": "tsc -p tsconfig.lib.json --pretty --noEmit",
            "forwardAllArgs": false
          },
          {
            "command": "tsc -p tsconfig.spec.json --pretty --noEmit",
            "forwardAllArgs": false
          }
        ],
        "cwd": "ts/libs/shared/ui/design-system"
      }
    }
  }
}
