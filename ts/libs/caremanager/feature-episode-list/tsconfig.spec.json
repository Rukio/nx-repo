{
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "@testing-library/jest-dom",
      "node"
    ]
  },
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "src/test/*.ts"
  ]
}
